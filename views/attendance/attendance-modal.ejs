<div class="modal fade" id="attendanceModal" tabindex="-1"
     aria-labelledby="attendanceModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="min-width: 60rem !important;">
        <div class="modal-content">
            <div class="modal-header">
                <div>일정추가</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body write">
                <table>
                    <tbody>
                    <tr>
                        <th width="20%">제목</th>
                        <td>
                            <input type="text" id="createTitle">
                        </td>
                    </tr>
                    <tr>
                        <th>공개범위</th>
                        <td>
                            <select id="createViewOption">
                                <option value="own">개인</option>
                                <option value="dep">부서</option>
                                <option value="all">전체</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>시작</th>
                        <td>
                            <input type="date" id="createStartDate">
                            <input type="time" id="createStartTime">
                        </td>
                    </tr>
                    <tr>
                        <th>종료</th>
                        <td>
                            <input type="date" id="createEndDate">
                            <input type="time" id="createEndTime">
                        </td>
                    </tr>
                    <tr>
                        <th>내용</th>
                        <td>
                            <textarea class="scroll" id="createMemo" onkeyup="countTextLength('textCnt', this, 255)"></textarea>
                            <div id="textCnt">(0 / 255)</div>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                <button type="button" class="btn btn-primary" id="saveBtn">저장</button>
            </div>
        </div>
    </div>
</div>